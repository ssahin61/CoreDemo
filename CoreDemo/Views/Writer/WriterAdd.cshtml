@model CoreDemo.Models.AddProfileImage

@{
	ViewData["Title"] = "WriterAdd";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h4>Yazar Ekleme Sayfası</h4>
<br />
<form class="forms-sample" method="post" enctype="multipart/form-data">
	<div>
		<input type="hidden" class="form-control" asp-for="WriterID" />
	</div>
	<div class="form-group">
		<label for="exampleInputName1">Ad Soyad</label>
		<input type="text" class="form-control" asp-for="WriterName" placeholder="Ad Soyad">
		<span asp-validation-for="WriterName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="exampleInputEmail3">Mail Adresi</label>
		<input type="email" class="form-control" asp-for="WriterMail" placeholder="Email">
		<span asp-validation-for="WriterMail" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label for="exampleInputPassword4">Şifre</label>
		<input type="password" class="form-control" asp-for="WriterPassword" placeholder="Şifre">
		<span asp-validation-for="WriterPassword" class="text-danger"></span>
	</div>
	<div>
		<label>Yazar Görseli</label>
		<input type="file" asp-for="WriterImage" />
	</div>
	<br />
	<div class="form-group">
		<label for="exampleTextarea1">Yazar Hakkında</label>
		<textarea class="form-control" asp-for="WriterAbout" rows="4"></textarea>
	</div>
	<button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
	<button class="btn btn-light">İptal</button>
</form>
