@model List<Message2>

@{
	ViewData["Title"] = "SendBox";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<br />

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Konu</th>
		<th>Alıcı</th>
		<th>Tarih</th>
		<th>Mesajı aç</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<th>@item.MessageID</th>
			<td>@item.Subject</td>
			<td>@item.ReceiverWriter.WriterName</td>
			<td>@item.MessageDate.ToShortDateString()</td>
			<td><a href="/Message/MessageDetails/@item.MessageID/" class="btn btn-success">Mesajı Aç</a></td>
		</tr>
	}
</table>
<br />

<a href="/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>
<a style="margin-top:15px" href="/Message/InBox" class="btn btn-info">Gelen Kutusu</a>




