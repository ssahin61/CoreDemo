@model List<Blog>
@{
	ViewData["Title"] = "BlogListByWriter";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<br />

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Blog Başlığı</th>
		<th>Oluşturulma Tarihi</th>
		<th>Kategori</th>
		<th>Durum</th>
		<th>Sil</th>
		<th>Düzenle</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<th>@item.BlogID</th>
			<td>@item.BlogTitle</td>
			<td>@item.BlogCreateDate.ToShortDateString()</td>
			<td>@item.Category.CategoryName</td>
			<td>
				@if (item.BlogStatus == true)
				{
					<span class="badge badge-success">Aktif</span>
				}
				else
				{
					<span class="badge badge-secondary">Pasif</span>
				}
			</td>
			<td><a href="/Blog/DeleteBlog/@item.BlogID" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a></td>
			<td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
		</tr>
	}
</table>
<br />

<a href="/Blog/BlogAdd" class="btn btn-primary">Yeni Blog Oluştur</a>
