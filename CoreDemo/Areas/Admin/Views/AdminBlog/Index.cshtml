@model List<Blog>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>

	<div class="wrapper wrapper-content animated fadeInRight">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-md-3">
					<div class="ibox">
						<div class="ibox-content product-box">

							<div>
								<img src="@item.BlogImage" style="width: 100%;" />
							</div>
							<div class="product-desc">
								<span class="product-price">
									@item.BlogCreateDate.ToShortDateString()
								</span>
								<small class="text-muted">@item.Category.CategoryName</small>
								<a href="#" class="product-name"> @item.BlogTitle</a>

								<div class="small m-t-xs">
									@if (!string.IsNullOrEmpty(item.BlogContent) && item.BlogContent.Length > 110)
									{
										<p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 110).LastIndexOf(" "))...</p>
									}
									else
									{
										<p class="card-text mb-3">@item.BlogContent</p>
									}
								</div>
								<div class="m-t text-righ">

									<a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>

	</div>

</body>

</html>

