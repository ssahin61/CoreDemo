@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="ibox ">
		<div class="ibox-title">
			<h5>Roller  </h5>
			<div class="ibox-tools">
			</div>
		</div>
		<div class="ibox-content">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Başlık</th>
						<th>Sil</th>
						<th>Düzenle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th>@item.Id</th>
							<td>@item.Name</td>
							<td><a href="/Admin/Role/DeleteRole/@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Admin/Role/AddRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>
			<a href="/Admin/Role/UserRoleList" class="btn btn-outline-info" style="margin-left:7px">Kullanıcı Rol Listesi</a>
		</div>
	</div>
</div>