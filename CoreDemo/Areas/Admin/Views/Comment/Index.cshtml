@model List<Comment>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="ibox ">
		<div class="ibox-title">
			<h5>Yorumlar  </h5>
			<div class="ibox-tools">
			</div>
		</div>
		<div class="ibox-content">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Kullanıcı</th>
						<th>Başlık</th>
						<th>Blog</th>
						<th>Puan</th>
						<th>Tarih</th>
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th>@item.CommentID</th>
							<td>@item.CommentUserName</td>
							<td>@item.CommentTitle</td>
							<td>@item.Blog.BlogTitle</td>
							<td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
							<td>@item.CommentDate.ToShortDateString()</td>
							<td><a href="#" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

